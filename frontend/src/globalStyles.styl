body
   margin 0
   touch-action none
   user-select none
   -webkit-user-drag none

.full-screen
    width 100%
    height 100vh
    background #222
    display flex
    flex-direction column
    color #eee

.cor
    flex 1 1 50%
    font-size 18px
    text-align left 

.behavior
    position absolute
    bottom   4px

button
    height 40px
    position absolute
    right  4px
    top 4px